generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator zod {
  provider = "pnpx zod-prisma-types"
  output   = "../src/prisma/dto"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name  String
  createdAt DateTime @default(now())
}